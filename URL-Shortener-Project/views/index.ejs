<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>

    <!-- ZMDI Material Design Iconic Font CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/material-design-iconic-font@2.2.0/dist/css/material-design-iconic-font.min.css"
    />

    <link rel="icon" type="image/svg+xml" href="/images/Logo.png" />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <main>
      <div id="container">
        <% if(user) { %>
        <div class="status-badge success">
          <i class="zmdi zmdi-check-circle"></i>
          <span>You are logged In</span>
        </div>
        <% } else { %>
        <div class="status-badge warning">
          <i class="zmdi zmdi-alert-circle"></i>
          <span>You are not logged In</span>
        </div>
        <% } %>

        <h1>URL Shortener</h1>
        <form action="/" method="post">
          <div class="input-div">
            <label for="url">Enter URL:</label>
            <input
              type="url"
              name="url"
              id="url"
              placeholder="Enter URL Here"
              required
            />
          </div>
          <div class="input-div">
            <label for="shortCode">Enter Short Code:</label>
            <input
              type="text"
              name="shortCode"
              id="shortCode"
              placeholder="Enter Short Code Here"
              required
            />
          </div>

          <% if(errors && errors.length>0){ %> <% errors.forEach((error) => { %>
          <p class="flash-error"><%= error %></p>
          <% }) %> <% } %>

          <button type="submit">Shorten</button>
        </form>

        <h2>Shortened URLs:</h2>
        <ul>
          <% if(links.length>0) {%> <% links.forEach((link) => { %>
          <div class="links">
            <li>
              <a href="/<%= link.shortCode %>" target="_blank"
                ><%= `http://${host}/${link.shortCode}` %></a
              >
              <span><%= link.url %></span>
            </li>
            <div class="url-option">
              <form action="/delete/<%= link.id %>" method="post">
                <button class="url-delete" type="submit">
                  <i class="zmdi zmdi-delete"></i>
                </button>
              </form>
              <div class="url-update">
                <a href="/edit/<%= link.id %>"
                  ><i class="zmdi zmdi-edit"></i
                ></a>
              </div>
              <div class="url-actions">
                <button class="copy-btn" data-url="<%= link.url %>">
                  <i class="zmdi zmdi-copy"></i>
                </button>
              </div>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p class="no-urls">No URLs have been shortened yet.</p>
          <% } %>
        </ul>
      </div>
    </main>

    <%- include("partials/footer.ejs") %>

    <script>
      // Simple copy to clipboard functionality
      document.addEventListener("DOMContentLoaded", function () {
        const copyButtons = document.querySelectorAll(".copy-btn");

        copyButtons.forEach((button) => {
          button.addEventListener("click", function () {
            const url = this.getAttribute("data-url");
            navigator.clipboard.writeText(url).then(() => {
              // Visual feedback
              this.innerHTML = '<i class="zmdi zmdi-check"></i>';
              setTimeout(() => {
                this.innerHTML = '<i class="zmdi zmdi-copy"></i>';
              }, 2000);
            });
          });
        });
      });
    </script>
  </body>
</html>
